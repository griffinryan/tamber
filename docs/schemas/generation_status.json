{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GenerationStatus",
  "type": "object",
  "additionalProperties": false,
  "required": ["job_id", "state", "progress", "updated_at"],
  "properties": {
    "job_id": {
      "type": "string",
      "format": "uuid",
      "description": "Stable identifier for the generation request."
    },
    "state": {
      "type": "string",
      "enum": ["queued", "running", "succeeded", "failed"],
      "description": "Lifecycle state for the generation."
    },
    "progress": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0,
      "default": 0.0,
      "description": "Fractional progress between 0 and 1."
    },
    "message": {
      "type": ["string", "null"],
      "description": "Optional human-readable status or error detail."
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the last status change."
    }
  }
}
