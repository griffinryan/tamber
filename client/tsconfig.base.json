{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@timbre/api": ["packages/api/src"],
      "@timbre/config": ["packages/config/src"],
      "@timbre/ui": ["packages/ui/src"],
      "@timbre/state": ["packages/state/src"]
    }
  }
}
